{
  "name": "adapt-contrib-flipcard",
  "version": "5.1.1",
  "framework": ">=5.19.1",
  "homepage": "https://github.com/learningpool/adapt-contrib-flipcard",
  "authors": [
    "Himanshu Rajotia <himanshu.rajotia@exultcorp.com>",
    "Ciaran Duffy <ciaran@learningpool.com>"
  ],
  "description": "A presentation component which displays one or more images which reveal text when clicked, with a flip card effect",
  "main": "/js/adapt-contrib-flipcard.js",
  "displayName": "Flipcard",
  "component": "flipcard",
  "assetFields": [
    "_items[].frontImage.src"
  ],
  "keywords": [
    "adapt-plugin",
    "adapt-component"
  ],
  "license": "GPLv3",
  "private": true,
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-eslint": "^3.0.9",
    "semantic-release": "^19.0.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "bower.json",
            "package.json"
          ],
          "message": "Chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "scripts": {
    "postversion": "cp package.json bower.json"
  }
}
